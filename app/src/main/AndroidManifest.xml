<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ilm.mydrinks">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ilm.mydrinks.ui.welcome.WelcomeActivity"
            android:theme="@style/welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ilm.mydrinks.ui.login.LoginActivity"
            android:label="Login"
            android:theme="@style/login" />
        <activity
            android:name="com.ilm.mydrinks.ui.register.RegisterActivity"
            android:label="Register"
            android:theme="@style/login" />
        <activity android:name="com.ilm.mydrinks.ui.main.MainActivity" />
        <activity android:name="com.ilm.mydrinks.ui.register.RegisterConfirmationActivity" />
        <activity android:name="com.ilm.mydrinks.activity.LoginConfirmationActivity" />
        <activity android:name="com.ilm.mydrinks.activity.ClubListDetailActivity" />
        <activity android:name="com.ilm.mydrinks.activity.ProfileDetailActivity" />
        <activity android:name="com.ilm.mydrinks.activity.ChangePasswordActivity" />
        <activity android:name="com.ilm.mydrinks.activity.ChangePassConfirmActivity" />
        <activity android:name="com.ilm.mydrinks.activity.MyPointDetailActivity" />
        <activity android:name="com.ilm.mydrinks.activity.MyBottleDetailActivity" />
        <activity android:name="com.ilm.mydrinks.activity.MyBottleClaimConfirmActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name="com.ilm.mydrinks.ui.myqr.MyQRActivity" />
        <activity android:name="com.ilm.mydrinks.activity.SettingsActivity" />
        <activity android:name="com.ilm.mydrinks.activity.SettingsAboutActivity"></activity>
    </application>

</manifest>