<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3d6ab3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:src="@drawable/logo_pernord_richard"
            android:scaleType="centerInside"/>

        <Button
            android:id="@+id/btn_welcome_register"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/button_rounded"
            android:layout_gravity="center"
            android:text="Register"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Already have an account?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_welcome_login"
            android:layout_width="170dp"
            android:layout_height="64dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rounded_outline"
            android:text="Log-in"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#18315e"
            android:textAllCaps="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="By using this apps, you agree to\nMyDrinks Indonesia's Terms of Use and\nPrivacy Policy"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>