<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3d6ab3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:src="@drawable/logo_pernord_richard"
            android:scaleType="centerInside"
            android:id="@+id/imageView"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
            app:srcCompat="@drawable/logo_pernord_richard"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
            android:paddingTop="24dp" />

        <Button
            android:id="@+id/btn_welcome_register"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded"
            android:layout_gravity="center"
            android:text="Register"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintRight_toRightOf="@+id/imageView"
            app:layout_constraintLeft_toLeftOf="@+id/imageView"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:id="@+id/textView3"
            app:layout_constraintRight_toRightOf="@+id/btn_welcome_register"
            app:layout_constraintLeft_toLeftOf="@+id/btn_welcome_register"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_welcome_register" />

        <Button
            android:id="@+id/btn_welcome_login"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rounded_outline"
            android:text="Log-in"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#18315e"
            android:textAllCaps="false"
            app:layout_constraintRight_toRightOf="@+id/textView3"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.83" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By using this apps, you agree to\nMyDrinks Indonesia's Terms of Use and\nPrivacy Policy"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="16sp"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/btn_welcome_login"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
            android:layout_marginBottom="24dp"
            app:layout_constraintRight_toRightOf="@+id/btn_welcome_login"
            app:layout_constraintLeft_toLeftOf="@+id/btn_welcome_login"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1" />

</android.support.constraint.ConstraintLayout>