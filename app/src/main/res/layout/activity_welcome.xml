<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3d6ab3">

        <ImageView
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:src="@drawable/luxe_storage_customer_inverse"
            android:scaleType="centerCrop"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/luxe_storage_customer_inverse"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btn_welcome_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded"
            android:layout_gravity="center"
            android:text="Register"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toLeftOf="@+id/imageView"
            app:layout_constraintRight_toRightOf="@+id/imageView"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:id="@+id/textView3"
            app:layout_constraintRight_toRightOf="@+id/btn_welcome_register"
            app:layout_constraintLeft_toLeftOf="@+id/btn_welcome_register"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_welcome_register" />

        <Button
            android:id="@+id/btn_welcome_login"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rounded_outline"
            android:text="Log-in"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#18315e"
            android:textAllCaps="false"
            app:layout_constraintRight_toRightOf="@+id/textView3"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.83" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By using this apps, you agree to\nLuxe-Storage Indonesia's Terms of Use and\nPrivacy Policy"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="16sp"
            android:id="@+id/textView4"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/btn_welcome_login"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintRight_toRightOf="@+id/btn_welcome_login"
            app:layout_constraintLeft_toLeftOf="@+id/btn_welcome_login"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1" />

</android.support.constraint.ConstraintLayout>